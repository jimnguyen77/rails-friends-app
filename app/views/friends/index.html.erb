<% if user_signed_in? %>
  <div id="friends">
    <table class='table table-striped table-hover table-bordered'>
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <%= render friend %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New friend", new_friend_path, class:'btn btn-primary btn-sm' %>
<% else %>
  <h1>Welcome</h1>
<% end %>